{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "Change of Ownership of an Item",
              "weight": "bolder",
              "size": "medium",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "We just need a few more details to get started with your request",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Item ID",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "itemID",
              "placeholder": "D0000101217"
            },
            {
              "type": "TextBlock",
              "text": "New User",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "newUser",
              "placeholder": "c-pavdit"
            },
            {
              "type": "TextBlock",
              "text": "New Group",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "newGroup",
              "placeholder": "GTT"
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "Image",
              "url": "https://mvptech.ae/wp-content/uploads/2019/04/Assa.png",
              "size": "stretch",
              "altText": "Assaabloy Logo"
            },
            {
              "type": "Image",
              "url": "https://cdn-icons-png.flaticon.com/512/179/179616.png",
              "size": "auto",
              "altText": "Change of Ownership of an Item in Teamcenter"
            }            
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "scenario": "change ownership"
      }      
    }
  ]
}
